div.container
  div.row
    div.col.s3
      div#edit-lesson-component(*ngIf="lesson")
        //- Lesson Name
        div#edit-lesson-name
          h4 {{ lesson.name }}
          div.btn.btn-waves.floating-effect((click)="goBack()") Back
          div.btn.btn-waves.floating-effect((click)="saveLesson()") Save Lesson
        //- Difficulty
        div#edit-lesson-difficulty
          h6.header Difficulty*
          p(*ngFor="let difficulty of ['Beginner', 'Intermediate', 'Advanced']; let i = index")
            input(
              type="radio"
              name="lesson-difficulty"
              id="lesson-difficulty-{{ i }}"
              value="{{ difficulty }}"
              checked="{{lesson.difficulty === difficulty ? 'true' : null}}"
              (click)="lesson.difficulty = difficulty"
            )
            label(for="lesson-difficulty-{{ i }}") {{ difficulty }}
        //- Time to Complete
        div#edit-lesson-time-to-complete
          h6.header Time To Complete*
          div.input-field
            input(
              type="number"
              name="time-to-complete"
              [(ngModel)]="lesson.timeToComplete"
              id="time-to-complete"
              step="0.5"
            )
        //- Drips
        div#view-lesson-drips
          div(*ngFor="let drip of lesson.drips")
            h6 {{ drip.title }}
            button.btn.btn-waves((click)="startEditDrip(drip)") Edit Drip
            button.btn.btn-waves((click)="deleteDrip(drip)") Delete Drip
          div#add-drip([hidden]="editState.editing")
            button.btn.btn-waves((click)="addDrip()") Add Drip
    div.col.s9
      div#edit-drip(*ngIf="editState.editing")
        edit-drip([drip]="editingDrip" (saveDrip)="saveDrip($event)")
