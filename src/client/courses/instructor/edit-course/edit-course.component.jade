//- Course header
div.container(*ngIf="!!this.course")
  div.row
    h3 {{ course.data.name }}
    toggle-language((toggleLanguage)="setLanguage($event)")
    edit-price([course]="course")
  div.row
    div((click)="addModule()")
      i.material-icons add
  //- Modules
  div.row(*ngFor="let module of course.data.modules[language]; let i = index")
    h3 {{ module.name }}
    module-row([module]="module" [idx]="i" [course]="course" [language]="language")
