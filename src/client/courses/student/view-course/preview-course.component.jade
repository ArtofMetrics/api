div.container
  div.row
    div.col.s12
      h2.header {{ course.data.name }}
      div.card.horizontal
        div.card-image
          img(src="{{ course.data.photos[0].url }}")
        div.card-stacked
          div.card-content
            //- course-expiration([studentCourse]="course")
            div.row
              div.col.s6
                blockquote {{ course.data.description }}
              div.col.s6
                h5.header Taught By
                p(*ngFor="let instructor of instructors") {{ instructor.fullName() }}
            div.btn.btn-waves((click)="resubscribeToCourse()") Resubscribe


